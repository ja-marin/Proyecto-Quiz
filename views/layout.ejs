<!DOCTYPE html>
<html>
  <head>
    <title>Preguntas</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" type="text/css" href="/stylesheets/wide.css" media='only screen and (min-width: 800px) and (min-device-width: 600px)'> 
    <link rel="stylesheet" type="text/css" href="/stylesheets/smartphone.css" media='only screen and (max-width: 480 px)'>
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
  </head>
  <body>
    <div id="page">
    <header class="main">
      <h2>Quiz<span class="no-narrow">: el juego de las preguntas</span></h2>
    </header>
    <nav class="main" role="navigation">
      <a href="/">Inicio</a>
      <a href="/quizzes">Preguntas</a>
    </nav>
    <form method="get" action="/quizzes">
      <input type="text" name="search" value="" >
      <input type="submit" value="Enviar">
    </form>
    <section>
      <% if(messages.info){ %>
      <article id='flashinfo'>
        <h3>Información de interés:</h3>
        <ul>
          <% for (var i in messages.info){ %>
          <li><%=messages.info[i]%></li>
          <% } %>
        </ul>
      </article>
      <% } %>

      <% if(messages.success){ %>
      <article id='flashsuccess'>
        <h3>Tareas completadas con éxito:</h3>
        <ul>
          <% for (var i in messages.success){ %>
          <li><%=messages.success[i]%></li>
          <% } %>
        </ul>
      </article>
      <% } %>

      <% if(messages.error){ %>
      <article id='flasherror'>
        <h3>Errores encontrados:</h3>
        <ul>
          <% for (var i in messages.error){ %>
          <li><%=messages.error[i]%></li>
          <% } %>
        </ul>
      </article>
      <% } %>
    </section>
    <section class="main"><div><%- body %></div></section>
    <footer class="main">
      <a href="http://es.wikipedia.org/wiki/Quiz">¿Qué es un Quiz</a>
      <a href="https://github.com/ja-marin/Proyecto-Quiz.git">Enlace a Github</a>
      <a href="/author">Créditos</a>

    </footer>
    </div>
  </body>
</html>